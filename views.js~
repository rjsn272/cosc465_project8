var userdb = require ('./userdb.js');

exports.index = function (req, res) {
    var username = userdb.get_user_name(req.session.id);
    res.render('index', {title: "Speed tests", message: "Hello, world", user: username})};

exports.tests = function (req, res) {
    var username = userdb.get_user_name(req.session.id);
	var allInfo = userdb.add_user(req.session.id,username);
    res.render('tests', {title: "Speed tests", message: "Hello, world", user: username,latency_results: allInfo.latency_results})};
